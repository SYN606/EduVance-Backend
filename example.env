# example.env (This file should be used to set up your local .env file)

# Secret key for Django (use a strong key in production)
SECRET_KEY=your-secret-key-here

# Django environment setting (development, production, etc.)
DJANGO_ENV=development

# Allowed Hosts - Specify your domain(s) here
ALLOWED_HOSTS=your-production-domain.com,www.your-production-domain.com

# Database Configuration (PostgreSQL for production)
DATABASE_URL=postgres://your-db-user:your-db-password@your-db-host:5432/your-db-name

# Email Configuration (replace with your email provider details)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.your-email-provider.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-email-password
