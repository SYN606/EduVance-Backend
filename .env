# Secret key for Django (use a strong key in production)
SECRET_KEY=your-production-secret-key

# Debug mode (set to False in production)
DEBUG=False
DJANGO_ENV=development

# Allowed hosts (production domain)
ALLOWED_HOSTS=your-production-domain.com,www.your-production-domain.com

# Database URL (PostgreSQL for production, replace with actual values)
DATABASE_URL=postgres://your-db-user:your-db-password@your-db-host:5432/your-db-name

# Email configuration (adjust based on your email service)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.your-email-provider.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-email-password

# Other environment variables for production (e.g., for caching, file storage, etc.)
